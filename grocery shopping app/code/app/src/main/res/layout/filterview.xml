<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_270sdp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/roundcorner"
            android:backgroundTint="#EDE7F6"
            android:padding="@dimen/_5sdp"
            android:id="@+id/ll"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_5sdp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="#63000000"
                android:text="-"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sort by"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price High"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:textColor="#86000000"
                    android:paddingLeft="@dimen/_5sdp"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price Low"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:textColor="#86000000"
                    android:paddingLeft="@dimen/_5sdp"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Rading High"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:textColor="#86000000"
                    android:paddingLeft="@dimen/_5sdp"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Rating Low"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:textColor="#86000000"
                    android:paddingLeft="@dimen/_5sdp"/>

            </RadioGroup>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>